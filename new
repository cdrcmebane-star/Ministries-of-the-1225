<div class="container">
  <!-- SVG Heart -->
  <svg class="heart" viewBox="0 0 32 29.6" width="150" height="140" xmlns="http://www.w3.org/2000/svg" aria-label="Heart">
    <path d="M23.6,0c-2.5,0-4.7,1.5-5.6,3.7C16.1,1.5,13.9,0,11.4,0
    C5.1,0,0,5.1,0,11.4c0,7.1,11.1,15.2,16,18.2c4.9-3,16-11.1,16-18.2C32,5.1,26.9,0,23.6,0z"/>
  </svg>

  <!-- Circular text -->
  <div class="circular-text" aria-label="Ministry Name"></div>
</div>

<script>
  const text = "Inside The Heart Of Christ Ministries ";
  const circularText = document.querySelector('.circular-text');
  
  for(let i = 0; i < text.length; i++) {
    const span = document.createElement('span');
    span.innerText = text[i];
    const rotate = i * (360 / text.length);
    span.style.transform = `rotate(${rotate}deg) translate(0, -120px) rotate(-${rotate}deg)`;
    circularText.appendChild(span);
  }
</script>
